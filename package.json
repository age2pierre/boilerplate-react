{
  "name": "boilerplate-react",
  "version": "0.1.0",
  "description": "A simple opinionated boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/age2pierre/boilerplate-react.git"
  },
  "license": "ISC",
  "main": "src/index.tsx",
  "scripts": {
    "build": "npm run type-check && parcel build --experimental-scope-hoisting src/index.html",
    "format": "prettier --write 'src/'",
    "lint": "npm run lint-css && npm run lint-ts",
    "lint-css": "stylelint --fix './src/**/*.{ts,tsx}'",
    "lint-ts": "eslint -c .eslintrc.json --fix 'src/**/*.{ts,tsx}'",
    "start": "npm run watch-build && npm run watch-type-check",
    "pretest": "npm run lint && npm run format",
    "test": "jest && npm run type-check",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "type-coverage": "type-coverage --detail -p ./tsconfig.json --strict --ignore-catch --at-least 99",
    "upgrade-interactive": "npm-check --update",
    "watch-build": "parcel serve src/index.html --open --no-autoinstall",
    "watch-type-check": "tsc --project tsconfig.json --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npx ultra test"
    }
  },
  "lint-staged": {
    "*.{json,scss,css,html,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "stylelint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-typescript": "7.10.4",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.2",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "5.1.5",
    "@types/react-test-renderer": "16.9.3",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "autoprefixer": "9.8.6",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.21.1",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "npm-check": "5.9.2",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "postcss-modules": "3.2.2",
    "prettier": "2.1.2",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "sass": "1.26.11",
    "sort-package-json": "1.46.0",
    "stylelint": "13.7.1",
    "stylelint-config-recommended": "3.0.0",
    "ts-jest": "26.4.0",
    "type-coverage": "2.13.0",
    "typescript": "4.0.3",
    "typescript-plugin-css-modules": "2.7.0",
    "ultra-runner": "3.5.0"
  },
  "ultra": {
    "concurrent": [
      "test",
      "lint",
      "start"
    ]
  }
}
