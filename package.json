{
  "name": "boilerplate-react",
  "version": "0.1.0",
  "description": "A simple opinionated boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/age2pierre/boilerplate-react.git"
  },
  "license": "ISC",
  "main": "src/index.tsx",
  "scripts": {
    "build": "parcel build --experimental-scope-hoisting src/index.html",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,scss,css,html,md}'",
    "gql:all": "npm run gql:validate && npm run gql:report && npm run gql:typegen",
    "gql:report": "npx ts-graphql-plugin report --verbose",
    "gql:typegen": "rimraf src/**/__generated__ && npx ts-graphql-plugin typegen --verbose",
    "gql:validate": "npx ts-graphql-plugin validate --verbose",
    "lint": "eslint -c .eslintrc.json --fix 'src/**/*.{ts,tsx}'",
    "start": "parcel serve src/index.html --open --no-autoinstall",
    "test": "jest",
    "upgrade-interactive": "npx npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,scss,css,html,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "@types/node": "13.11.0",
    "graphql": "14.5.8",
    "graphql-tag": "2.10.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.1.2",
    "src": "1.1.2",
    "urql": "1.9.5",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/jest": "25.2.1",
    "@types/react": "16.9.32",
    "@types/react-dom": "16.9.6",
    "@types/react-router-dom": "5.1.3",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "@urql/devtools": "0.1.2",
    "autoprefixer": "9.7.6",
    "babel-plugin-graphql-tag": "2.5.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "eslint-plugin-simple-import-sort": "5.0.2",
    "husky": "4.2.3",
    "jest": "25.2.7",
    "lint-staged": "10.1.2",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "postcss-modules": "1.5.0",
    "prettier": "2.0.4",
    "rimraf": "3.0.2",
    "sass": "1.26.3",
    "sort-package-json": "1.41.0",
    "ts-graphql-plugin": "1.11.0",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3",
    "typescript-plugin-css-modules": "2.2.0"
  }
}
