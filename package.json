{
  "name": "boilerplate-react",
  "version": "0.1.0",
  "description": "A simple opinionated boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/age2pierre/boilerplate-react.git"
  },
  "license": "ISC",
  "main": "src/index.tsx",
  "scripts": {
    "build": "npm run type-check && parcel build --experimental-scope-hoisting src/index.html",
    "format": "prettier --write 'src/'",
    "lint": "eslint -c .eslintrc.json --fix 'src/**/*.{ts,tsx}'",
    "start": "npm run watch-build && npm run watch-type-check",
    "pretest": "npm run lint && npm run format",
    "test": "jest && npm run type-check",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "type-coverage": "type-coverage --detail -p ./tsconfig.json --strict --ignore-catch --at-least 99",
    "upgrade-interactive": "npm-check --update",
    "watch-build": "parcel serve src/index.html --open --no-autoinstall",
    "watch-type-check": "tsc --project tsconfig.json --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "ultra test"
    }
  },
  "lint-staged": {
    "*.{json,scss,css,html,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "@react-three/cannon": "0.5.3",
    "@react-three/drei": "2.2.7",
    "@react-three/flex": "0.5.2",
    "@react-three/postprocessing": "1.5.0",
    "polished": "4.0.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-jss": "10.5.0",
    "react-router-dom": "5.2.0",
    "react-spring": "8.0.27",
    "react-three-fiber": "5.3.3",
    "react-three-gui": "0.4.2",
    "react-use-gesture": "8.0.1",
    "three": "0.122.0",
    "utility-types": "3.10.0",
    "zustand": "3.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/preset-typescript": "7.12.7",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@react-three/gltfjsx": "3.0.10",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.9",
    "@types/react-dom": "17.0.0",
    "@types/react-router-dom": "5.1.6",
    "@types/react-test-renderer": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "6.0.1",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.2",
    "npm-check": "5.9.2",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "prettier": "2.2.0",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "sass": "1.29.0",
    "sort-package-json": "1.48.0",
    "ts-jest": "26.4.4",
    "type-coverage": "2.14.5",
    "typescript": "4.1.2",
    "ultra-runner": "3.5.1"
  },
  "ultra": {
    "concurrent": [
      "test",
      "start"
    ]
  }
}
