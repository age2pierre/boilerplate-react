{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "~*": ["./src/*"] },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "postCssOptions": {
            "useConfig": true
          }
        }
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["src/**/*"]
}
